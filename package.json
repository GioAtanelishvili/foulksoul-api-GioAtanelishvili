{
  "name": "folksoul",
  "version": "1.0.0",
  "description": "Folksoul is a platform for musical band, where you can get information about the band and its members.",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/server.js",
    "build:watch": "babel src --out-dir build --extensions .ts --copy-files --watch",
    "build:prod": "babel src --out-dir build --extensions .ts --copy-files --minified",
    "dev": "concurrently \"npm run build:watch\" \"nodemon build/server.js\"",
    "create:user": "node build/bin/create-user.js"
  },
  "author": "Gio Atanelishvili",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/joi": "^17.2.3",
    "@types/prompt-sync": "^4.1.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.19",
    "prettier": "2.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "mongoose": "^6.4.4",
    "prompt-sync": "^4.2.0"
  }
}
